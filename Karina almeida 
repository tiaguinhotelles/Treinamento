  </footer>  <script>
    // Configura√ß√µes
    const WHATSAPP_NUMBER = '5511992292900'; // Brasil +55 DDD 11
    const BUSINESS_START = '08:00';
    const BUSINESS_END = '20:00';

    const form = document.getElementById('bookingForm');
    const dateInput = document.getElementById('date');
    const timeInput = document.getElementById('time');
    const messageBox = document.getElementById('message');

    // define min date como hoje
    const today = new Date();
    const yyyy = today.getFullYear();
    const mm = String(today.getMonth()+1).padStart(2,'0');
    const dd = String(today.getDate()).padStart(2,'0');
    dateInput.min = `${yyyy}-${mm}-${dd}`;

    function toMinutes(t){ const [h,m]=t.split(':').map(Number); return h*60+m}
    const startMin = toMinutes(BUSINESS_START), endMin = toMinutes(BUSINESS_END);

    function showMessage(text,type='ok'){
      messageBox.style.display='block';
      messageBox.className = type === 'ok' ? 'ok' : 'error';
      messageBox.textContent = text;
      setTimeout(()=>{ messageBox.style.display='none' }, 6000);
    }

    function isWeekday(dateStr){
      const d = new Date(dateStr + 'T00:00:00');
      const day = d.getDay(); // 0 dom, 6 sab
      return day >=1 && day <=5;
    }

    form.addEventListener('submit', (e)=>{
      e.preventDefault();
      const name = document.getElementById('clientName').value.trim();
      const phone = document.getElementById('clientPhone').value.trim();
      const service = document.getElementById('service').value;
      const date = dateInput.value;
      const time = timeInput.value;
      const notes = document.getElementById('notes').value.trim();

      if(!name||!phone||!date||!time){ showMessage('Preencha todos os campos obrigat√≥rios.','error'); return }
      if(!isWeekday(date)){ showMessage('Por favor escolha um dia entre segunda e sexta-feira.','error'); return }

      const minutes = toMinutes(time);
      if(minutes < startMin || minutes >= endMin){ showMessage('Escolha um hor√°rio entre 08:00 e 20:00.','error'); return }

      // Monta mensagem para WhatsApp
      const text = `Ol√° Karina! üëã%0AMeu nome √© *${encodeURIComponent(name)}*%0ATelefone: *${encodeURIComponent(phone)}*%0AServi√ßo: *${encodeURIComponent(service)}*%0AData: *${encodeURIComponent(date)}*%0AHor√°rio: *${encodeURIComponent(time)}*%0AObserva√ß√µes: *${encodeURIComponent(notes||'-')}*%0A%0APor favor, confirmar disponibilidade e hor√°rio.`;
      const url = `https://wa.me/${WHATSAPP_NUMBER}?text=${text}`;

      // Abre em nova aba
      window.open(url,'_blank');
      showMessage('Pedido preparado! Seu WhatsApp ser√° aberto para envio da mensagem.');
    });

    // salvar localmente
    document.getElementById('saveLocal').addEventListener('click', ()=>{
      const name = document.getElementById('clientName').value.trim();
      const phone = document.getElementById('clientPhone').value.trim();
      const service = document.getElementById('service').value;
      const date = dateInput.value;
      const time = timeInput.value;
      const notes = document.getElementById('notes').value.trim();
      if(!name||!phone||!date||!time){ showMessage('Preencha todos os campos para salvar.','error'); return }
      const booking = {name,phone,service,date,time,notes};
      let list = JSON.parse(localStorage.getItem('karina_bookings')||'[]');
      list.push(booking);
      localStorage.setItem('karina_bookings', JSON.stringify(list));
      showMessage('Agendamento salvo no seu navegador (local).');
    });

    // Preenche exemplo de telefone se vazio
    (function fillPhone(){ if(!document.getElementById('clientPhone').value) document.getElementById('clientPhone').placeholder='(11) 9XXXX-XXXX' })();
  </script></body>
